source :rubygems

gem 'compass',              '~>0.10.6' # Compass is a Sass-based Stylesheet Framework that streamlines the creation and maintainance of CSS.
gem 'haml',                 '~>3.0.24'
gem 'httparty',             '~>0.6.1' # makes consuming restful web services dead easy.
gem 'jquery-rails',         '~>0.2.5' # provides a Rails generator to install jQuery and the jQuery-ujs driver into your Rails 3 application, and then have them included automatically instead of Prototype.
gem 'mysql2'
gem 'rails',                '~>3.0.3'

group :test, :development do
  gem 'autotest',           '~>4.4.4' # Autotest, without ZenTest
  gem 'autotest-growl',     '~>0.2.6' # support for Growl notifications by autotest
  gem 'capybara',           '~>0.4.0' # Integration testing tool for rack based web applications.
  gem 'cucumber-rails',     '~>0.3.2'
  gem 'database_cleaner',   '~>0.6.0' # Strategies for cleaning databases. Can be used to ensure a clean state for testing.
  gem 'factory_girl_rails', '~>1.0'
  gem 'fakeweb',            '~>1.3.0' # faking web requests in Ruby
  gem 'launchy',            '~>0.3.7' # So you can do Then show me the page
  gem 'mongrel',            '~>1.1.5'
  gem 'pickle',             '~>0.4.2' # Easy model creation and reference in your cucumber features
  gem 'rspec-rails',        '~>2.1.0'
  gem 'spork',              '~>0.8.4' # A forking Drb spec server
  gem 'tolk',               '~>1.0'   # web interface for doing i18n translations
end

group :development do
  gem 'hirb'
  gem 'wirble'
end
